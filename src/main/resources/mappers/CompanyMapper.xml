<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.beaniejoy.bootapiserver.mapper.CompanyMapper">
    <resultMap id="companyMap" type="io.beaniejoy.bootapiserver.model.Company">
        <id property="id" column="id" />
        <result property="name" column="company_name" />
        <result property="address" column="company_address" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" parameterType="map" keyProperty="id">
        INSERT INTO company(company_name, company_address)
        VALUES(#{company.name}, #{company.address})
    </insert>

    <select id="getAll" resultMap="companyMap">
        SELECT * FROM company
    </select>

    <select id="getById" parameterType="map" resultMap="companyMap">
        SELECT * FROM company WHERE id = #{id}
    </select>
</mapper>