<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.beaniejoy.bootapiserver.mapper.EmployeeMapper">
    <resultMap id="employeeMap" type="io.beaniejoy.bootapiserver.model.Employee">
        <id property="id" column="id" />
        <result property="name" column="employee_name" />
        <result property="address" column="employee_address" />
        <result property="companyId" column="company_id" />
    </resultMap>
    
    <insert id="insert" useGeneratedKeys="true" parameterType="map" keyProperty="id">
        INSERT INTO employee(company_id, employee_name, employee_address) 
        VALUES(#{employee.companyId}, #{employee.name}, #{employee.address})
    </insert>
    
    <select id="getAll" resultMap="employeeMap">
        SELECT * FROM employee
    </select>

    <select id="getById" parameterType="map" resultMap="employeeMap">
        SELECT * FROM employee WHERE id = #{id}
    </select>
</mapper>